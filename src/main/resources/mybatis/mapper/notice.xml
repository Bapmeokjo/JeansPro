<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.jeans.domain.admin.notice.dao.NoticeDAO">
    <!--공지사항 목록 모두 조회-->
    <select id="selectAll" resultType="NoticeDTO">
        <![CDATA[
        SELECT *
        FROM notice
        ]]>
    </select>
    <!-- 공지사항 최근 목록 5개-->
    <select id="selectFive" resultType="NoticeDTO">
        <![CDATA[
        SELECT *
        FROM notice
        ORDER BY notice_regdate DESC
        LIMIT 5;
        ]]>
    </select>
    <!--공지사항 INSERT-->
    <insert id="insertNotice" parameterType="NoticeDTO">
        <![CDATA[
        INSERT INTO notice (notice_title, notice_content, member_class)
        VALUES (#{notice_title}, #{notice_content}, #{member_class});
        ]]>
    </insert>
</mapper>